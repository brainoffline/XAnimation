<?xml version="1.0" encoding="utf-8"?>

<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAnimation.Forms.Sample.App">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/BaseResources.xaml"/>        <!-- Common -->
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>     <!-- Theme Specific -->
                <ResourceDictionary Source="Themes/Styles.xaml"/>               <!-- Control Styles and Templates -->
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>

</Application>